openapi: 3.0.0
info:
  title: coffeeAPI
  version: 1.0.0
servers:
  - url: http://localhost:3000
paths:
  /post/{id}:
    get:
      tags:
        - default
      summary: getPost
      parameters:
        - name: id
          in: path
          schema:
            type: string
          required: true
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
    put:
      tags:
        - default
      summary: editPost
      requestBody:
        content:
          application/json:
            schema:
              type: object
              example:
                type: robusta
                authorEmail: abc@gmail.com
      parameters:
        - name: id
          in: path
          schema:
            type: string
          required: true
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
    delete:
      tags:
        - default
      summary: deletePost
      parameters:
        - name: id
          in: path
          schema:
            type: string
          required: true
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
  /post/:
    post:
      tags:
        - default
      summary: postPost
      requestBody:
        content:
          application/json:
            schema:
              type: object
              example:
                type: arabica
                origin: Sumatra
                treeHeight: 1
                latitude: 90
                longitude: 2
                altitude: 20
                authorEmail: xyz@gmail.com
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
  /signup:
    post:
      tags:
        - default
      summary: postSignup
      requestBody:
        content:
          application/json:
            schema:
              type: object
              example:
                email: xyz@gmail.com
                password: '12345'
                name: Fabian
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
  /users:
    get:
      tags:
        - default
      summary: getUsers
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}
  /user/{id}:
    delete:
      tags:
        - default
      summary: deleteUser
      parameters:
        - name: id
          in: path
          schema:
            type: string
          required: true
      responses:
        '200':
          description: Successful response
          content:
            application/json: {}